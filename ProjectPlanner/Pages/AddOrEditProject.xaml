<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPlanner.Pages.AddOrEditProject"
             Title="AddOrEditProject">
    <VerticalStackLayout>
        <Label
            Text="Project Name"
            VerticalOptions="End"
            HorizontalOptions="Start"
            Margin="20" />
        <Entry
            TextChanged="OnEntryTextChanged_project_name"
            x:Name="entry_project_name"
            Placeholder="Enter project name"
            VerticalOptions="Start"
            Margin="20" />
        <Label
            Text="Project Description"
            VerticalOptions="Center"
            HorizontalOptions="Start"
            Margin="20" />
        <Entry
            TextChanged="OnEntryTextChanged_project_description"
            x:Name="entry_project_description"
            Placeholder="Enter project description"
            Margin="20" />

        <Picker x:Name="picker"

                SelectedIndexChanged="OnPickerSelectedIndexChanged"
                Title="Select project type"
                Margin="20">
        </Picker>
    </VerticalStackLayout>
</ContentPage>