<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPlanner.Pages.AddOrEditTask"
             Title="AddOrEditTask">
    <VerticalStackLayout>
        <Label
Text="Project Name:"
        FontSize="20"
FontFamily="HeaderFont"
VerticalOptions="End"
HorizontalOptions="Start"
Margin="20" />
        <Label
    FontSize="14"
FontFamily="TechFont"
            x:Name="entry_project_name"
    VerticalOptions="End"
    HorizontalOptions="Start"
    Margin="20" />

        <Label
    Text="Task Name"
            FontSize="14"
FontFamily="TechFont"
    VerticalOptions="End"
    HorizontalOptions="Start"
    Margin="20" />
        <Entry
    TextChanged="OnEntryTextChanged_task_name"
    x:Name="entry_task_name"
    Placeholder="Enter task name"
    VerticalOptions="Start"
    Margin="20" />
        <Label
    Text="Project Description"
            FontSize="14"
FontFamily="TechFont"
    VerticalOptions="Center"
    HorizontalOptions="Start"
    Margin="20" />
        <Entry
    TextChanged="OnEntryTextChanged_task_description"
    x:Name="entry_task_description"
    Placeholder="Enter task description"
    Margin="20" />
    </VerticalStackLayout>
</ContentPage>