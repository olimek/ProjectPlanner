<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectPlanner.Pages.ProjectPage"
             Title="SzczegÃ³Å‚y projektu">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Grid ColumnDefinitions="*,Auto,Auto" Padding="0,0,0,10">

                <Label x:Name="NameLabel"
               FontAttributes="Bold"
               FontSize="26"
               TextColor="{StaticResource TextPrimary}"
               Grid.Column="0"
               VerticalOptions="Center"
               LineBreakMode="TailTruncation" />
                <Button
x:Name="addTaskBtn"
Grid.Column="1"
BackgroundColor="{StaticResource AccentColor}"
Clicked="addTaskBtn_Clicked"
CornerRadius="30"
FontSize="26"
HeightRequest="50"
WidthRequest="50"
Text="âž•"
TextColor="Black"
HorizontalOptions="End"
VerticalOptions="Center"
Padding="0"
Margin="0,0,0,0" />
                <Button
            x:Name="DelProjectBtn"
            Grid.Column="2"
            BackgroundColor="{StaticResource AccentColor}"
            Clicked="DelProjectBtn_Clicked"
            CornerRadius="30"
            FontSize="26"
            HeightRequest="50"
            WidthRequest="50"
            Text="ðŸ—‘"
            TextColor="Black"
            HorizontalOptions="End"
            VerticalOptions="Center"
            Padding="0"
            Margin="0,0,0,0" />
            </Grid>
            <Label x:Name="DescriptionLabel"
                   FontSize="18"
                   TextColor="{StaticResource TextSecondary}" />

            <Label x:Name="TypeLabel"
                   FontSize="16"
                   TextColor="Gray" />

            <Label Text="Zadania:" FontAttributes="Bold" FontSize="20" Margin="0,20,0,10" />

            <CollectionView x:Name="TasksList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Name}" FontSize="16" />
                            <Label Text="{Binding IsDone, StringFormat='({0})'}" FontSize="14" />
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>