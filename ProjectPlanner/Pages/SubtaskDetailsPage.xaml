<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProjectPlanner.Pages.SubtaskDetailsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:model="clr-namespace:ProjectPlanner.Model;assembly=ProjectPlanner.Model"
    Title="SubtaskDetailsPage"
    BackgroundColor="#121212">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label
            FontAttributes="Bold"
            FontSize="26"
            Text="{Binding Title}"
            TextColor="White" />
        <Label Text="{Binding Details}" TextColor="#A0A0A0" />
        <Label
            FontAttributes="Bold"
            FontSize="18"
            Text="Szczegóły:"
            TextColor="#89CFF0" />
        <Label Text="Zakończone:" TextColor="White" />
        <Switch IsToggled="{Binding IsCompleted}" />
        <Label Text="Termin:" TextColor="White" />
        <Label Text="{Binding Deadline, StringFormat='{0:dd MMM yyyy HH:mm}'}" TextColor="#A0A0A0" />
    </VerticalStackLayout>
</ContentPage>